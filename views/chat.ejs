<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sentiment Analysis</title>
</head>
<body>
    <h1>Chat</h1>
    <div>
        <% let chats = wholeChats %>
        <% for(var i = 0; i < chats.length; i++){ %>
              <p> <%= chats[i].text %> </p>
              <p> <%= chats[i].sentiment %> </p>
          <% } %>
    </div>
    <form method="POST" action="/analyze-sentiment">
        <textarea name="text" rows="4" cols="50" placeholder="Enter text for sentiment analysis"></textarea>
        <br>
        <button type="submit">Analyze</button>
    </form>
</body>
</html>
